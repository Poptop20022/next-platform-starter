{
  "name": "tenderhub-backend",
  "version": "1.0.0",
  "description": "TenderHub Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
