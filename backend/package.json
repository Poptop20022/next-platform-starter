    "docx": "^8.2.2",
    "pdfkit": "^0.14.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5"
